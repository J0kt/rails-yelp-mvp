<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Tous les restaurants</h1>
  <%= link_to "Ajouter un restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>

<div class="list-group">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant), class: "list-group-item list-group-item-action" do %>
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= restaurant.name %></h5>
        <small class="text-muted"><%= restaurant.category.capitalize %></small>
      </div>
      <p class="mb-1"><%= restaurant.address %></p>
    <% end %>
  <% end %>
</div>
